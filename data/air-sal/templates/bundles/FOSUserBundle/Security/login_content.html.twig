{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<form action="{{ path("fos_user_security_check") }}" method="post" class="connection__form">
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}

    <label class="connection__label" for="username">Nom de comte</label>
    <input class="connection__input" type="text" id="username" name="_username" value="{{ last_username }}" required="required" autocomplete="username" />

    <label class="connection__label" for="password">Mot de passe</label>
    <input class="connection__input" type="password" id="password" name="_password" required="required" autocomplete="current-password" />

    <div class="connection__input connection__input--checkbox">
        <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
        <label class="connection__label connection__label--checkbox" for="remember_me">Se souvenir de moi</label>
    </div>
    <br>

    <div class="connection__submit">
        <input type="submit" id="_submit" name="_submit" value="Connection"/>
    </div>
</form>


<div class="connection__register">
    Votre première réservation?
    <br>
    <a href="/register">Me créer un compte.</a>
</div>