{% extends 'tables.html.twig' %}

{% block title %}Air-sal vous présente ses salles{% endblock %}

{% block content %}

    <h1>Nos salles</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Adresse</th>
            <th>Surface</th>
            <th>Capacité</th>

            {# FIXME: delete me#}
            <th>Published</th>

            <th>Nom</th>
            <th>Price</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for salle in salles %}
            <tr>
                <td>{{ salle.address }}</td>
                <td>{{ salle.size }}</td>
                <td>{{ salle.capacity }}</td>

                {# FIXME: delete me #}
                <td>{{ salle.published ? 'Yes' : 'No' }}</td>

                <td>{{ salle.name }}</td>
                <td>{{ salle.price }}€</td>
                <td>
                    <a href="{{ path('salle_show', {'id': salle.id}) }}">show</a>
                    {% if app.user != null and app.user.hasrole("ROLE_ADMIN") %}
                        <a href="{{ path('salle_edit', {'id': salle.id}) }}">edit</a>
                    {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {% if app.user != null and app.user.hasrole("ROLE_ADMIN") %}
        <a href="{{ path('salle_new') }}">Create new</a>
    {% endif %}

{% endblock %}